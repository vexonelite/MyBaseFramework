<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	>
<!--	android:background="@color/base_grey_40"-->

	<ImageView
		android:id="@+id/image"
		android:layout_width="75dp"
		android:layout_height="75dp"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toTopOf="parent"
		app:layout_constraintBottom_toBottomOf="parent"
		android:layout_marginStart="10dp"
		android:layout_marginTop="10dp"
		android:background="@android:color/darker_gray"
		android:contentDescription="@string/base_empty_string"
		/>
<!--	app:srcCompat="@mipmap/connect_icon_check_single"-->

	<TextView
		android:id="@+id/title"
		android:layout_width="0dp"
		android:layout_height="wrap_content"
		app:layout_constraintStart_toEndOf="@id/image"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintTop_toTopOf="parent"
		app:layout_constraintBottom_toTopOf="@+id/description"
		android:layout_marginStart="10dp"
		android:layout_marginEnd="10dp"
		android:layout_marginTop="10dp"
		android:maxLines="1"
		android:gravity="start|center_vertical"
		android:textSize="18dp"
		android:textColor="@android:color/holo_green_dark"
		android:textAppearance="?android:attr/textAppearanceMedium"
		android:text="000erkpfja0ejkrf;lke"
		/>
<!--	android:textStyle="bold"-->
<!--	android:textColor="@android:color/white"-->

	<TextView
		android:id="@+id/description"
		android:layout_width="0dp"
		android:layout_height="wrap_content"
		app:layout_constraintStart_toEndOf="@id/image"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintTop_toBottomOf="@id/title"
		app:layout_constraintBottom_toBottomOf="parent"
		android:layout_marginStart="10dp"
		android:layout_marginEnd="10dp"
		android:layout_marginTop="10dp"
		android:layout_marginBottom="10dp"
		android:maxLines="1"
		android:gravity="start|center_vertical"
		android:textSize="16dp"
		android:textColor="@android:color/holo_orange_dark"
		android:textAppearance="?android:attr/textAppearanceMedium"
		android:text="fdjpoeijfkcjpijffkejr;epcjvi"
		/>

</androidx.constraintlayout.widget.ConstraintLayout>
